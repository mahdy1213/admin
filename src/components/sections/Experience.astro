---
import { Briefcase, Calendar, MapPin, CheckCircle } from 'lucide-astro';
import data from '../../../data.json';
---

<section id="experience" class="section-padding bg-gradient-to-br from-brand-50/50 via-white to-accent-50/50 dark:from-primary-800 dark:via-primary-800 dark:to-primary-900 relative overflow-hidden">
  <div class="container-width relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold gradient-text mb-6">Experience <span class="belt belt-yellow ml-2">Yellow Belt</span></h2>
      <p class="text-xl text-primary-600 dark:text-primary-300 max-w-3xl mx-auto leading-relaxed">
        A timeline of roles and accomplishments in which I have been influential through engineering, leadership, product thinking, and coding.
      </p>
    </div>

    <div class="space-y-8">
      {data.experience.map((exp) => (
        <article class="card p-6">
          <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
            <div class="space-y-1">
              <h3 class="text-2xl font-semibold flex items-center gap-2">
                <Briefcase class="w-6 h-6 text-brand-600 dark:text-brand-400" /> {exp.title}
              </h3>
              <p class="text-primary-600 dark:text-primary-300">
                <span class="font-medium">{exp.company}</span>
                {exp.location && (<>
                  <span class="mx-2">•</span>
                  <span class="inline-flex items-center gap-1"><MapPin class="w-4 h-4" /> {exp.location}</span>
                </>)}
              </p>
              <p class="text-sm text-primary-500 dark:text-primary-400 inline-flex items-center gap-2">
                <Calendar class="w-4 h-4" /> {exp.start_date} — {exp.end_date}
              </p>
            </div>
          </div>

          {exp.achievements?.length && (
            <ul class="mt-4 space-y-2">
              {exp.achievements.map((item) => (
                <li class="flex items-start gap-3 text-primary-700 dark:text-primary-300">
                  <CheckCircle class="w-5 h-5 mt-0.5 text-accent-600 dark:text-accent-400 flex-shrink-0" />
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          )}
        </article>
      ))}
    </div>
  </div>
</section>
